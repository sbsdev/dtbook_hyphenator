<project name="XMLHyphenationTransformer" default="default">
	<description>
            A simple Stax transformer that hyphenates text nodes
    </description>

	<!-- ================================= 
          target: default              
         ================================= -->
	<target name="default" depends="jar" description="A simple Stax transformer that hyphenates text nodes">

	</target>

	<target name="jar" depends="compile">
		<jar destfile="${ant.project.name}.jar">
			<fileset dir="bin"/>
		</jar>
	</target>

	<target name="compile">
		<javac srcdir="src" destdir="bin" classpath="jarfile" debug="on" includeantruntime="false" />
	</target>
</project>
